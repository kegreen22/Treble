<% if @top_flag == 0 %>
    <p>No articles meet your criteria<p>
      <% else %>


<table id="locations" class ="table1" cellspacing="0" width="100%">
  <thead>
  <tr>
    <th>Date</th>
    <th>Top Stories</th>
  </tr>
  </thead>

<body>
  <tr>
    <% @top_stories.each do |stories| %>
      <%= stories["published_date"].each do |date| %>
        <td><%= date %></td>
      <% stories["url"].each do |url| %>
      <% stories["title"].each do |title| %>
      <td><%= link_to url, title, target: "_blank" %></td>
      </tr>
    <% end %>
    <% end %>
    <% end %>
  </body>
</table>
<% end %>

