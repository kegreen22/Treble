 <% if @article_flag == 0 %>
    <p>No articles meet your criteria<p>
      <% else %>

<table id="locations" class ="table1" cellspacing="0" width="100%">
  <thead>
    <tr>
    <th>Date</th>
    <th><%= "Articles based on your interest -" + User.interest %></th>
  </tr>
  </thead>

<body>
  <tr>
     <% @nytimes_data["response"]["docs"].each do |article| %>
    <% article["pub_date"].each do |art_date| %>
    <td><%= art_date %></td>
    <% article["web_url"].each do |art_url| %> 
    <% article["headline"].each do |head| %>
    <% head["main"].each do |maintitle| %>
    <td><%= link_to art_url, maintitle, target: "_blank" %> </td>
      </tr>
    <% end %>
    <% end %>
    <% end %>
  </body>
</table>
<% end %>

   
    