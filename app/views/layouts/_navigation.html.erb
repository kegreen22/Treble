


<% if logged_in? %>
<div class='btn-group nav_item text-right'>
                <%= link_to('#', class: 'btn btn-primary dropdown-toggle', 'data-toggle' => 'dropdown') do %>
<%= current_user.username %>  <span class='caret'></span> <% end %>
 
<ul class='dropdown-menu'>
    <li>
    <%= link_to edit_user_path(current_user) do %> <i class="icon-pencil"></i>Edit Profile<% end %>
